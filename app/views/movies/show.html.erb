<h2><%= @current_movie.title %></h2>
<%= image_tag  @current_movie.image %>
<dl>
  <dt>首映</dt>
  <dd><%= @current_movie.join(:pubdate) %></dd>

  <dt>语言</dt>
  <dd><%= @current_movie.join(:language) %></dd>
  <dt>地区</dt>
  <dd><%= @current_movie.join(:country) %></dd>
  <dt>片长</dt>
  <dd><%= @current_movie.join(:movie_duration) %></dd>
  <dt>类型</dt>
  <dd><%= @current_movie.join(:movie_type) %></dd>
  <dt>版本</dt>
  <dd><%= @current_movie.join(:movie_edition) %></dd>
  <dt>导演</dt>
  <dd><%= @current_movie.join(:director) %></dd>
  <dt>主演</dt>
  <dd><%= @current_movie.join(:cast) %></dd>
</dl>

<h3><%= @current_movie.title %>的剧情简介</h3>
<blockquote>
  <%= @current_movie.summary %> 
</blockquote>

<h2>电影场次</h2>
<div>
  反映日期：
  <% 5.times do |i| %>
    <%= screening_date_tag(@current_movie, i) %>
  <% end %>
</div>
<ul>
  <%= content_tag_for(:li, @movie_sessions) do |session| %>
    <%= content_tag :span, session.movie_theatre.name %> 
    <%= content_tag :span, session.screening_room.name %> 
  <% end %>

</ul>